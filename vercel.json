{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "devCommand": "npm run dev",
    "installCommand": "npm install",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/",
            "destination": "/index.html"
        },
        {
            "source": "/about",
            "destination": "/index.html"
        },
        {
            "source": "/contact",
            "destination": "/index.html"
        },
        {
            "source": "/signin",
            "destination": "/index.html"
        },
        {
            "source": "/signup",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/profile",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/portfolio",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/post-project",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/chat",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/post-requirement",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/browse-designers",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/my-requirements",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/designer/:designerId",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/browse-requirements",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/my-proposals",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/browse-jobs",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/my-applications",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/projects",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/designers",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/freelancers",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/jobs",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard/applications",
            "destination": "/index.html"
        },
        {
            "source": "/:path*",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}